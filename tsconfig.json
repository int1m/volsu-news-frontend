{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "types": [
      "vitest/globals",
      "@pinia/nuxt",
    ],
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "tests",
  ],
  "exclude": [
    "node_modules",
  ],
}
